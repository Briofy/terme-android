<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainFrame"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ly_calendar_height"
    android:background="@color/ly_calendar_background_color"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/headerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/slycalendar_defHeaderColor"
        android:orientation="vertical"
        android:paddingLeft="27dp"
        android:paddingTop="21dp"
        android:paddingRight="27dp"
        android:paddingBottom="15dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/txtYear"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginBottom="10dp"
            android:alpha="0.5"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/slycalendar_defHeaderTextColor"
            android:textSize="14sp"
            tools:text="2018" />

        <TextView
            android:id="@+id/txtSelectedPeriod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/slycalendar_defHeaderTextColor"
            android:textSize="22sp"
            tools:text="FRI, 13 â€” SUN, 15 MAY" />

    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="12dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnMonthPrev"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_weight="0"
                android:contentDescription="@string/ly_calendar_prev"
                android:foreground="?android:attr/actionBarItemBackground"
                android:padding="12dp"
                app:srcCompat="@drawable/arrow_narrow_left"
                tools:ignore="VectorDrawableCompat" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/btnMonthNext"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_weight="0"
                android:contentDescription="@string/ly_calendar_next"
                android:foreground="?android:attr/actionBarItemBackground"
                android:padding="12dp"
                app:srcCompat="@drawable/arrow_narrow_right"
                tools:ignore="VectorDrawableCompat" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="16dp"
            android:weightSum="7"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/txtToday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/ly_card_button"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:text="@string/ly_calendar_today"
                android:textAllCaps="false"
                android:layout_weight="3"
                android:textColor="@android:color/white"
                app:shapeAppearance="@style/RoundedShapeAppearance" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/txtCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/ly_card_item_background"
                android:gravity="center"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:text="@string/ly_calendar_clear"
                android:textAllCaps="false"
                android:layout_weight="3"
                android:textColor="@color/ly_card_content"
                app:shapeAppearance="@style/RoundedShapeAppearance"
                app:strokeColor="@color/ly_button_stroke_color"
                app:strokeWidth="1dp" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>