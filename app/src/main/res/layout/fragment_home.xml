<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">

    <net.terme.offical.kbd.TermeKeyboard
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:keyText="Shift"
        app:keyType="arrowDown" />

    <net.terme.offical.kbd.TermeKeyboard
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:keyText="Shift"
        app:keyType="arrowLeft" />

    <net.terme.offical.kbd.TermeKeyboard
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:keyText="Shift"
        app:keyType="arrowRight" />

    <net.terme.offical.kbd.TermeKeyboard
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:keyText="Shift"
        app:keyType="arrowUp" />

    <net.terme.offical.kbd.TermeKeyboard
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:keyText="Shift"
        app:keyType="text" />

    <net.terme.offical.badge.TermeBadge
        app:badgeType="text"
        app:bText="test"
        app:bTintColor="@color/terme_progress_yellow"
        app:bBackgroundColor="@color/terme_progress_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <net.terme.offical.badge.TermeBadge
        app:badgeType="icon"
        app:bText="1"
        app:bTintColor="@color/terme_progress_black"
        app:bBackgroundColor="@color/terme_progress_pink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <net.terme.offical.badge.TermeBadge
        app:badgeType="number"
        app:bText="55"
        app:bTintColor="@color/terme_progress_orange"
        app:bBackgroundColor="@color/terme_progress_indigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.appcompat.widget.LinearLayoutCompat>