<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ly_card_background">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="222dp"
        android:scaleType="fitXY"
        android:src="@drawable/sample"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:paddingStart="20sp"
        android:paddingEnd="20sp"
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|center"
        android:padding="8dp"
        android:text="@string/popular"
        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
        android:textColor="@color/ly_card_title"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/image" />

    <RatingBar
        android:paddingStart="20sp"
        android:id="@+id/rating"
        style="?android:attr/ratingBarStyleIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:isIndicator="true"
        android:numStars="5"
        android:rating="3.9"
        android:stepSize="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/rating_value"
        android:layout_width="38sp"
        android:layout_height="22sp"
        android:layout_marginStart="8dp"
        android:background="@drawable/rating_value_background"
        android:gravity="center"
        android:text="3.9"
        android:textColor="@color/ly_card_title"
        app:layout_constraintBottom_toBottomOf="@+id/rating"
        app:layout_constraintStart_toEndOf="@id/rating"
        app:layout_constraintTop_toTopOf="@+id/rating"
        app:shapeAppearance="@style/RoundedShapeAppearance" />


    <FrameLayout
        android:paddingStart="20sp"
        android:paddingEnd="20sp"
        android:paddingBottom="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rating">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:gravity="start|center"
            android:padding="8dp"
            android:text="$599"
            android:textAppearance="@style/TextAppearance.Material3.HeadlineLarge"
            android:textColor="@color/ly_card_title"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/image" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/addToCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:layout_margin="0dp"
            android:backgroundTint="@color/ly_card_button"
            android:drawableStart="@drawable/ic_cart"
            android:drawablePadding="8dp"
            android:paddingStart="8dp"
            android:paddingTop="0dp"
            android:paddingEnd="16dp"
            android:paddingBottom="0dp"
            android:text="@string/add_to_cart"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            app:shapeAppearance="@style/RoundedShapeAppearance" />
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>