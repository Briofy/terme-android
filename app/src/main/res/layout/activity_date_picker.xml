<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".DatePickerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <net.terme.offical.TermeButton
            android:id="@+id/rangeSelect"
            app:buttonText="Date Picker - Range Pick"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            app:buttonTextColorRes="@color/white"
            android:layout_height="wrap_content"/>


        <net.terme.offical.TermeButton
            android:id="@+id/singleSelect"
            app:buttonText="Date Picker - Single Pick"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            app:buttonTextColorRes="@color/white"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>