<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <net.terme.offical.tag.TermeTag
            android:id="@+id/tag3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tag="Apple Watch Series 7 GPS" />

        <net.terme.offical.tag.TermeTag
            android:id="@+id/tag2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@id/tag3"
            app:tag="Apple Watch Series 7 GPS, Aluminium Case, Starlight Sport" />

        <net.terme.offical.tag.TermeTag
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@id/tag2"
            app:tag="Apple Watch Series 7 GPS, Aluminium Case, Starlight Sport" />


    </LinearLayout>
</androidx.core.widget.NestedScrollView>
