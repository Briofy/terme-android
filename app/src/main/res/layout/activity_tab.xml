<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/testPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/customTabs3"
        app:layout_constraintTop_toTopOf="parent" />

    <net.terme.offical.tablayout.TermeTabLayoutSliding
        android:id="@+id/customTabs3"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="30dp"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/customTabs2"
        app:terme_bar_color="@color/purple_700"
        app:terme_bar_stroke_color="@color/white"
        app:terme_bar_stroke_width="3dp"
        app:terme_divider_color="#ff0000"
        app:terme_divider_width="2dp"
        app:terme_indicator_anim_duration="500"
        app:terme_indicator_bounce_enable="true"
        app:terme_indicator_color="@color/purple_700"
        app:terme_indicator_corner_radius="30dp"
        app:terme_textBold="SELECT"
        app:terme_textSelectColor="@color/purple_500"
        app:terme_textUnselectColor="@color/teal_200"
        app:terme_textSize="13sp"
        app:terme_underline_color="@color/black" />

    <net.terme.offical.tablayout.TermeTabLayoutSegment
        android:id="@+id/customTabs2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="30dp"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/customTabs"
        app:terme_bar_color="@color/purple_700"
        app:terme_bar_stroke_color="@color/white"
        app:terme_bar_stroke_width="3dp"
        app:terme_divider_color="#ff0000"
        app:terme_divider_width="2dp"
        app:terme_indicator_anim_duration="500"
        app:terme_indicator_bounce_enable="true"
        app:terme_indicator_color="@color/purple_700"
        app:terme_indicator_corner_radius="30dp"
        app:terme_textBold="SELECT"
        app:terme_textSelectColor="@color/purple_500"
        app:terme_textUnselectColor="@color/teal_200"
        app:terme_textSize="13sp"
        app:terme_underline_color="@color/black" />

    <net.terme.offical.tablayout.TermeTabLayoutCommon
        android:id="@+id/customTabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:terme_divider_width="1dp"
        app:terme_indicator_color="@color/purple_700"
        app:terme_indicator_corner_radius="10dp"
        app:terme_textSelectColor="@color/purple_500"
        app:terme_textUnselectColor="@color/teal_200"
        app:terme_underline_color="@color/black" />
</androidx.constraintlayout.widget.ConstraintLayout>