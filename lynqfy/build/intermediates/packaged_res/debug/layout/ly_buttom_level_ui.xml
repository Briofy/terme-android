<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="42sp"
    android:background="@color/ly_card_item_background">

    <net.lynqfy.offical.LyButton
        android:id="@+id/company"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        app:ButtonBackground="@color/ly_card_item_background"
        app:backgroundType="filled"
        app:buttonShape="rect"
        app:buttonText="@string/company"
        app:buttonTextColorRes="@color/ly_card_title"
        app:buttonType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/marketplace"
        app:layout_constraintTop_toTopOf="parent" />

    <net.lynqfy.offical.LyButton
        android:id="@+id/marketplace"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        app:ButtonBackground="@color/ly_card_item_background"
        app:backgroundType="filled"
        app:buttonShape="rect"
        app:buttonText="@string/marketplace"
        app:buttonTextColorRes="@color/ly_card_title"
        app:buttonType="text"
        app:layout_constraintEnd_toStartOf="@id/features"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/company"
        app:layout_constraintTop_toTopOf="parent" />

    <net.lynqfy.offical.LyButton
        android:id="@+id/features"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        app:ButtonBackground="@color/ly_card_item_background"
        app:backgroundType="filled"
        app:buttonShape="rect"
        app:buttonText="@string/features"
        app:buttonTextColorRes="@color/ly_card_title"
        app:buttonType="text"
        app:layout_constraintEnd_toStartOf="@id/menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/marketplace"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/dots_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/features"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>