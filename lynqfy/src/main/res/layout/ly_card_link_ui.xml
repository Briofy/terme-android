<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ly_card_background"
    android:gravity="start|center"
    android:orientation="vertical"
    android:padding="16dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/gift" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|center"
        android:padding="8dp"
        android:text="@string/popular"
        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
        android:textColor="@color/ly_card_title"
        android:textStyle="bold" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|center"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
        android:paddingBottom="8dp"
        android:text="@string/popular"
        android:textColor="@color/ly_card_content" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/link_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/external_link"
        android:drawablePadding="8dp"
        android:gravity="start|center"
        android:padding="8dp"
        android:text="@string/popular"
        android:textColor="@color/ly_link_action" />

</androidx.appcompat.widget.LinearLayoutCompat>