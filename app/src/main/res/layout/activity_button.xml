<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/disable_color"
    tools:context=".ButtonActivity">

    <ScrollView
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">
            <net.lynqfy.offical.LyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="asdsadsad"
                app:ly_backgroundColor="#ff0000"
                app:ly_cornerRadius="10dp"
                android:layout_margin="12dp"
                app:ly_strokeColor="@color/black"
                android:gravity="center"
                app:ly_isWidthHeightEqual="false"
                android:padding="10dp"
                app:ly_strokeWidth="2dp"
                />

            <net.lynqfy.offical.LyButton
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:backgroundType="bordered"
                app:buttonShape="rect"
                app:buttonText="Bordered\nRect\nText"
                android:padding="10dp"
                app:buttonType="text" />

            <net.lynqfy.offical.LyButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:backgroundType="bordered"
                app:buttonEnable="false"
                app:buttonShape="rect"
                app:buttonText="Bordered-Rect_image"
                app:buttonType="image" />

            <net.lynqfy.offical.LyButton
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                app:backgroundType="bordered"
                app:buttonEnable="false"
                app:leftIcon="@drawable/ic_deaful_icon"
                app:rightIcon="@drawable/ic_deaful_icon"
                app:buttonShape="circular"
                app:buttonText="Bordered-circular_Text"
                app:buttonType="text" />

            <net.lynqfy.offical.LyButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:backgroundType="bordered"
                app:buttonEnable="false"
                app:buttonShape="circular"
                app:buttonText="Bordered-circular_Image"
                app:buttonType="image" />

            <net.lynqfy.offical.LyButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:backgroundType="filled"
                app:buttonEnable="false"
                app:buttonShape="rect"
                app:buttonText="filled-Rect_Text"
                app:buttonType="text" />

            <net.lynqfy.offical.LyButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:backgroundType="bordered"
                app:buttonEnable="false"
                app:buttonShape="rect"
                app:buttonText="filled-Rect_image"
                app:leftIcon="@drawable/ic_deaful_icon"

                app:buttonType="image" />

            <net.lynqfy.offical.LyButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:backgroundType="filled"
                app:buttonEnable="false"
                app:buttonShape="circular"
                app:buttonText="filled-circular_Text"
                app:buttonType="text" />

            <net.lynqfy.offical.LyButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:backgroundType="filled"
                app:buttonEnable="false"
                app:buttonShape="circular"
                app:buttonText="filled-circular_Image"
                app:buttonType="image" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>