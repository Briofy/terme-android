<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#eeeeee"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <net.terme.offical.tablayout.TermeTabLayoutCommon
            android:id="@+id/tl_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            tl:terme_indicator_color="#2C97DE"
            tl:terme_textSelectColor="#2C97DE"
            tl:terme_textUnselectColor="#66000000"
            tl:terme_underline_color="#DDDDDD"
            tl:terme_underline_height="1dp"/>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vp_2"
            android:layout_width="match_parent"
            android:layout_height="84dp"/>

        <net.terme.offical.tablayout.TermeTabLayoutCommon
            android:id="@+id/tl_2"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="#ffffff"
            tl:terme_iconHeight="23dp"
            tl:terme_iconWidth="23dp"
            tl:terme_indicator_color="#2C97DE"
            tl:terme_indicator_height="0dp"
            tl:terme_textSelectColor="#2C97DE"
            tl:terme_textUnselectColor="#66000000"
            tl:terme_textSize="12sp"
            tl:terme_underline_color="#DDDDDD"
            tl:terme_underline_height="1dp"/>

        <FrameLayout
            android:id="@+id/fl_change"
            android:layout_width="match_parent"
            android:layout_height="84dp">
        </FrameLayout>

        <net.terme.offical.tablayout.TermeTabLayoutCommon
            android:id="@+id/tl_3"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#ffffff"
            tl:terme_iconGravity="LEFT"
            tl:terme_iconHeight="18dp"
            tl:terme_iconMargin="5dp"
            tl:terme_iconWidth="18dp"
            tl:terme_indicator_bounce_enable="false"
            tl:terme_indicator_color="#2C97DE"
            tl:terme_indicator_gravity="TOP"
            tl:terme_textSelectColor="#2C97DE"
            tl:terme_textUnselectColor="#66000000"
            tl:terme_textSize="15sp"
            tl:terme_underline_color="#DDDDDD"
            tl:terme_underline_gravity="TOP"
            tl:terme_underline_height="1dp"/>

        <net.terme.offical.tablayout.TermeTabLayoutCommon
            android:id="@+id/tl_4"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#F6CE59"
            tl:terme_iconVisible="false"
            tl:terme_textBold="SELECT"
            tl:terme_indicator_width="10dp"
            tl:terme_textSize="14sp"/>

        <net.terme.offical.tablayout.TermeTabLayoutCommon
            tl:terme_textBold="BOTH"
            android:id="@+id/tl_5"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#EC7263"
            tl:terme_iconVisible="false"
            tl:terme_indicator_corner_radius="2dp"
            tl:terme_indicator_height="4dp"
            tl:terme_indicator_width="4dp"
            tl:terme_textSize="14sp"/>

        <net.terme.offical.tablayout.TermeTabLayoutCommon
            android:id="@+id/tl_6"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#57385C"
            tl:terme_iconVisible="false"
            tl:terme_indicator_corner_radius="1.5dp"
            tl:terme_indicator_height="3dp"
            tl:terme_indicator_width="10dp"
            tl:terme_textSize="14sp"/>

        <net.terme.offical.tablayout.TermeTabLayoutCommon
            android:id="@+id/tl_7"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#E45171"
            tl:terme_iconVisible="false"
            tl:terme_indicator_color="#eeeeee"
            tl:terme_indicator_corner_radius="1.5dp"
            tl:terme_indicator_height="3dp"
            tl:terme_indicator_style="TRIANGLE"
            tl:terme_indicator_width="10dp"
            tl:terme_textSize="14sp"/>

        <net.terme.offical.tablayout.TermeTabLayoutCommon
            android:id="@+id/tl_8"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#6D8FB0"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            tl:terme_iconVisible="false"
            tl:terme_indicator_margin_left="5dp"
            tl:terme_indicator_margin_right="5dp"
            tl:terme_indicator_style="BLOCK"
            tl:terme_textSize="14sp"/>
    </LinearLayout>
</ScrollView>