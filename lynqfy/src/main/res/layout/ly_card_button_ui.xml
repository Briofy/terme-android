<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ly_card_background"
    android:orientation="vertical"
    android:padding="16dp">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|center"
        android:text="@string/popular"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
        android:textColor="@color/ly_card_title" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|center"
        android:paddingEnd="8dp"
        android:paddingBottom="8dp"
        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
        android:text="@string/popular"
        android:textColor="@color/ly_card_content" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/actionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:backgroundTint="@color/ly_card_button"
        android:drawableEnd="@drawable/round_arrow_forward"
        android:drawablePadding="8dp"
        android:paddingStart="16dp"
        android:paddingTop="0dp"
        android:paddingEnd="8dp"
        android:paddingBottom="0dp"
        android:text="@string/read_more"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:shapeAppearance="@style/RoundedShapeAppearance" />

</androidx.appcompat.widget.LinearLayoutCompat>