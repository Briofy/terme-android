<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="LyKeyboard">
        <attr name="android:keyTextColor" format="color" />
        <attr name="keyText" format="string" />
        <attr name="android:keyBackground" format="color" />
        <attr name="keyType" format="enum">
            <enum name="arrowLeft"  value="1" />
            <enum name="arrowRight" value="2" />
            <enum name="arrowUp"    value="3" />
            <enum name="arrowDown"  value="4" />
            <enum name="text"  value="5" />
        </attr>
    </declare-styleable>

    <declare-styleable name="LyCardView">
        <attr name="header" format="string" localization="suggested" />
        <attr name="body" format="string" localization="suggested" />
        <attr name="type" format="enum">
            <enum name="crypto" value="1" />

            <enum name="testimonial" value="2" />
            <enum name="cta_card" value="13" />

            <enum name="ecommerce" value="9" />

            <enum name="pricing" value="3" />
            <enum name="with_list" value="4" />
            <enum name="form_inputs" value="5" />
            <enum name="user_profile" value="6" />

            <enum name="card_link" value="7" />
            <enum name="card_button" value="14" />

            <enum name="horizontal" value="8" />
            <enum name="card_image" value="10" />

            <enum name="type11" value="11" />
            <enum name="nav_tabs" value="12" />
        </attr>
    </declare-styleable>
    <declare-styleable name="LyCrypto">
        <attr name="helperText" format="string" localization="suggested" />
    </declare-styleable>
    <declare-styleable name="LyTestimonial">
        <attr name="authorName" format="string" localization="suggested" />
        <attr name="authorAvatar" format="reference" />
        <attr name="authorText" format="string" localization="suggested" />
    </declare-styleable>
    <declare-styleable name="LyCardButton">
        <attr name="actionButtonText" format="string" localization="suggested" />
        <attr name="actionButtonIconStart" format="reference" />
    </declare-styleable>
    <declare-styleable name="LyCardLink">
        <attr name="externalLinkText" format="string" localization="suggested" />
    </declare-styleable>
    <declare-styleable name="LyUserProfile">
        <attr name="userName" format="string" localization="suggested" />
        <attr name="userWork" format="string" localization="suggested" />
        <attr name="userImage" format="reference" />
    </declare-styleable>
    <declare-styleable name="LyEcommerce">
        <attr name="ecommerceName" format="string" localization="suggested" />
        <attr name="ecommerceCast" format="float" localization="suggested" />
        <attr name="ecommerceRating" format="float" localization="suggested" />
        <attr name="ecommerceImage" format="reference" />
    </declare-styleable>


    <declare-styleable name="LyProgressBar">
        <attr name="mode" format="boolean" localization="suggested" />
        <attr name="maxValue" format="integer" localization="suggested" />
        <attr name="progressValue" format="integer" localization="suggested" />

        <attr name="colorName" format="enum">
            <enum name="Indigo" value="1" />
            <enum name="Pink" value="2" />
            <enum name="Yellow" value="3" />
            <enum name="Purple" value="4" />
            <enum name="Orange" value="5" />
            <enum name="Dark" value="6" />
            <enum name="Green" value="7" />
            <enum name="Primary" value="8" />
        </attr>
    </declare-styleable>
    <declare-styleable name="LyTag">
        <attr name="tag" format="string" localization="suggested" />
    </declare-styleable>
    <declare-styleable name="LyRadio">
        <attr name="radioName" format="string" localization="suggested" />
        <attr name="radioHelper" format="string" localization="suggested" />
        <attr name="radioDisable" format="boolean" localization="suggested" />
    </declare-styleable>
    <declare-styleable name="LySpinner">
        <attr name="spinner_mode" format="boolean" localization="suggested" />
        <attr name="spinnerColorName" format="enum">
            <enum name="Indigo" value="1" />
            <enum name="Pink" value="2" />
            <enum name="Yellow" value="3" />
            <enum name="Purple" value="4" />
            <enum name="Orange" value="5" />
            <enum name="Dark" value="6" />
            <enum name="Green" value="7" />
            <enum name="Primary" value="8" />
        </attr>
        <attr name="spinner_tint" format="reference"/>
    </declare-styleable>
    <declare-styleable name="LyCalendarView">
        <attr name="backgroundColor" format="color" />
        <attr name="headerColor" format="color" />
        <attr name="headerTextColor" format="color" />
        <!--        <attr name="textColor" format="color" />-->
        <attr name="selectedColor" format="color" />
        <attr name="selectedTextColor" format="color" />
        <attr name="firstMonday" format="boolean" />
    </declare-styleable>
    <declare-styleable name="LyCheckBox">
        <!-- The label to be displayed to the right of the checkbox. The label is part of the clickable element to select the checkbox.-->
        <attr name="label" format="string" />
        <!-- The name of the submitted field in a checkbox.-->
        <attr name="name" format="string" />

        <!-- Marks the field as invalid. Changes style of unchecked component. -->
        <attr name="isInvalid" format="boolean" />
        <attr name="textColor" format="color" />
        <attr name="tintColor" format="color" />

        <!-- Sets whether the checkbox is disabled.    -->
        <attr name="isDisabled" format="boolean" />
        <!-- Marks the field as required & changes the label style. -->
        <attr name="isRequired" format="boolean" />
        <!-- Sets whether the checkbox is indeterminate. This only affects the style and does not modify the isChecked property. -->
        <attr name="isIndeterminate" format="boolean" />

        <!-- The value to be used in the checkbox input. This is the value that will be returned on form submission.-->
        <attr name="value">
            <enum name="number" value="1" />
            <enum name="string" value="2" />
        </attr>
        <attr name="size"> <!--The size of the Checkbox-->
            <enum name="small" value="1" />
            <enum name="medium" value="2" />
            <enum name="large" value="3" />
            <enum name="xlarge" value="4" />
        </attr>

    </declare-styleable>

    <declare-styleable name="LyNavBar">

        <attr name="navBarIcon" format="reference" />
        <attr name="navBarTitle" format="string" localization="suggested" />
        <attr name="navBarLink" format="string" localization="suggested" />

        <attr name="NavBarType" format="enum">
            <enum name="SimpleMegaMenu" value="1" />
            <enum name="MegaMenuWithIcons" value="2" />
            <enum name="SearchLinksUser" value="3" />
            <enum name="CTADropdown" value="4" />
            <enum name="TwoLevelMegaMenu" value="5" />
            <enum name="LogoCTA" value="6" />
            <enum name="LanguageSearch" value="7" />
            <enum name="CenteredLinks" value="8" />
            <enum name="LinksUser" value="9" />
            <enum name="WithCTAButton" value="10" />
            <enum name="BottomLevel" value="11" />
            <enum name="ThreeLevels" value="12" />
            <enum name="FullWidthDescription" value="13" />
            <enum name="DoubleDropdown" value="14" />
            <enum name="TopLevel" value="15" />

        </attr>
    </declare-styleable>

</resources>