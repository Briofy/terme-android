<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/terme_card_background"
    android:padding="24dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/nav_logo"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/nav_bar_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/nav_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="@string/flow_bite"
        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
        android:textColor="@color/terme_card_title"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/nav_logo"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/user_image"
        android:layout_width="32sp"
        android:layout_height="32sp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/sample"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/line"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/CircularShapeAppearance" />

    <View
        android:id="@+id/line"
        android:layout_width="1sp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:background="@color/terme_card_item_background"
        app:layout_constraintBottom_toBottomOf="@id/user_image"
        app:layout_constraintEnd_toStartOf="@+id/nav_logout"
        app:layout_constraintTop_toTopOf="@id/user_image" />

    <net.terme.offical.TermeButton
        android:id="@+id/nav_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:ButtonBackground="@color/terme_card_background"
        app:backgroundType="filled"
        app:buttonShape="rect"
        app:buttonText="@string/logout"
        app:buttonTextColorRes="@color/terme_link_action"
        app:buttonType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>